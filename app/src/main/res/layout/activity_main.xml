<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.user.logintest.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/t_login"
        android:layout_width="202dp"
        android:layout_height="wrap_content"
        android:text="登入"
        android:textColor="@android:color/black"
        android:textSize="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/t_accountID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AccountID"

            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/AccountID"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="149dp"
            tools:layout_editor_absoluteY="-4dp" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:id="@+id/t_password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Password"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Password"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            tools:layout_editor_absoluteX="149dp"
            tools:layout_editor_absoluteY="-4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/b_login"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Login" />

    <CheckBox
        android:id="@+id/login_check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="94dp"
        android:layout_y="190dp"
        android:checked="true"
        android:layout_gravity="center_horizontal"
        android:text="記住密碼"></CheckBox>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">
        <TextView
            android:id="@+id/register"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:text="If you have not registered,please press the registration key on the right"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="10sp" />

        <Button
            android:id="@+id/b_register"
            android:text="Register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1" />


    </LinearLayout>


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="20sp" />


    <Button
        android:id="@+id/fb_login_bn"
        android:layout_width="100sp"
        android:layout_height="30sp"
        android:layout_below="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:background="@color/com_facebook_messenger_blue"
        android:text="Facebook登入"
        android:textSize="@dimen/com_facebook_likeview_text_size"/>

    <TextView
        android:id="@+id/data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="38dp"
        android:text="TextView"
        android:textSize="14sp" />





</LinearLayout >
