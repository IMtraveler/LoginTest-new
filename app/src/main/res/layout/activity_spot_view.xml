<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.logintest.SpotView">

    <AutoCompleteTextView
        android:id="@+id/seachbar"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="搜尋景點"
        />

    <Button
        android:id="@+id/B_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="Search"
        android:layout_alignBaseline="@+id/seachbar"
        android:layout_alignBottom="@+id/seachbar"
        android:layout_toRightOf="@+id/seachbar"
        android:layout_toEndOf="@+id/seachbar" />

    <ListView
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:id="@+id/spot_list"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/B_search" />

</RelativeLayout>
