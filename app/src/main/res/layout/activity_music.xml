<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.logintest.MusicActivity">

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="12dp"
        tools:ignore="MissingConstraints,RelativeOverlap"
        android:layout_alignBaseline="@+id/btn_toAudio"
        android:layout_alignBottom="@+id/btn_toAudio"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <Button
        android:id="@+id/btn_toAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="12dp"
        tools:ignore="MissingConstraints,RelativeOverlap"
        android:layout_above="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="����"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="277dp"
        tools:layout_editor_absoluteY="12dp"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp"
        android:layout_alignBaseline="@+id/btn_toAudio"
        android:layout_alignBottom="@+id/btn_toAudio"
        android:layout_toRightOf="@+id/btn_toAudio"
        android:layout_toEndOf="@+id/btn_toAudio" />

    <TextView
        android:id="@+id/tv_attrName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toStartOf="@+id/btn_toAudio"
        android:layout_toLeftOf="@+id/btn_toAudio"
        android:text="@string/text"
        android:textSize="20sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:text="@string/back" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_attrIntro"
        android:layout_below="@+id/tv_attrName"
        app:srcCompat="@color/cardview_light_background" />

    <TextView
        android:id="@+id/tv_attrIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_toAudio"
        android:layout_alignLeft="@+id/button2"
        android:layout_alignStart="@+id/button2"
        android:layout_marginBottom="72dp"
        android:text="TextView" />

</RelativeLayout>
