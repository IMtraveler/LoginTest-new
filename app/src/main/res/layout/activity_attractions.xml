<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.user.logintest.AttractionsActivity">

    <Button
        android:id="@+id/btn_toAudio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="37dp"
        android:layout_marginEnd="102dp"
        android:layout_marginRight="102dp"
        android:text="@string/button"
        tools:ignore="MissingConstraints,RelativeOverlap"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:id="@+id/tv_attrName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@+id/btn_toAudio"
        android:layout_toStartOf="@+id/btn_toAudio"
        android:text="@string/attrationName"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv_attr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_attrIntro"
        android:layout_below="@+id/tv_attrName"
        app:srcCompat="@color/cardview_light_background" />

    <TextView
        android:id="@+id/tv_attrIntro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:text="TextView"
        android:layout_above="@+id/btn_toAudio"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="21dp"
        android:layout_marginStart="21dp" />

    <Button
        android:id="@+id/btn_upload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="26dp"
        android:layout_marginRight="26dp"
        android:text="@string/uploadAudio"
        android:layout_alignBaseline="@+id/btn_toAudio"
        android:layout_alignBottom="@+id/btn_toAudio"
        android:layout_toLeftOf="@+id/btn_toAudio"
        android:layout_toStartOf="@+id/btn_toAudio" />

</RelativeLayout>
