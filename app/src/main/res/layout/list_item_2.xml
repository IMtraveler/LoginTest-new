<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/list_audioName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:padding="@dimen/cardview_default_radius"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/list_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/list_audioName"
        android:layout_marginLeft="8dp"
        android:padding="@dimen/cardview_default_radius"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textColor="?attr/colorControlNormal"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/clicks"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBaseline="@+id/list_audioName"
        android:layout_alignBottom="@+id/list_audioName"
        android:layout_alignLeft="@+id/list_guide"
        android:layout_alignStart="@+id/list_guide"
        android:layout_marginLeft="309dp"
        android:layout_marginStart="309dp" />


</RelativeLayout>
